from pynput.keyboard import Key, Controller
import time

keyboard = Controller() # Keyboard controller 
running = True


def on_press(key):  # Emergency stop: press ESC to quit
    global running
    if key == Key.esc:
        running = False
        return False

listener = Listener(on_press=on_press)
listener.start()

